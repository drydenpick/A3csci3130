{
  "rules": {
    ".read": "true",
    ".write": "true",
    "businesses": {
      "$business": {
        "number": {
          ".validate": "newData.isString() && newData.val().length == 9 && newData.val().length > 0"
        },
        "name": {
          ".validate": "newData.isNumber() && newData.val().length > 1 && newData.val().length < 49"
        },
        "primaryBusiness": {
          ".validate": "newData.isString() && newData.val().matches(/Fisher|Distributor|Processor|Fish Monger/)"
        },
        "address": {
          ".validate": "newData.isString() && newData.val().length < 50"
        },
        "province": {
          ".validate": "newData.isString() && newData.val().matches(/AB|BC|MB|NB|NL|NS|NT|NU|ON|PE|QC|SK|YT| /)"
        }
      }
    }
  }
}